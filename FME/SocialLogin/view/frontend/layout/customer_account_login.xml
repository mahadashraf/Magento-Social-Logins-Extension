        <referenceContainer name="customer.login.container">
            <block class="FME\SocialLogin\Block\Popup\Social" before="customer.login.container" ifconfig="sociallogin/general/enabled" name="social-login-popup-authentication-social-login" template="FME_SocialLogin::form/social.phtml">
